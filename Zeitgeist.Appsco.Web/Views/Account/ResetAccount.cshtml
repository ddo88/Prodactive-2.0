@using System.Net.Mime
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Prodactive - Inicio Sesión</title>

    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- bootstrap & fontawesome -->
    @*<link rel="stylesheet" href="../assets/css/bootstrap.min.css" />*@
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300italic' rel='stylesheet' type='text/css'>
    <link href="~/Content/template/assets/css/bootstrap.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/Content/template/assets/css/font-awesome.min.css" />
    <!-- text fonts -->
    <link rel="stylesheet" href="~/Content/template/assets/css/ace-fonts.css" />
    <!-- ace styles -->
    <link rel="stylesheet" href="~/Content/template/assets/css/ace.min.css" />
    <!--[if lte IE 9]>
        <link rel="stylesheet" href="../assets/css/ace-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/Content/template/assets/css/ace-rtl.min.css" />
    <!--[if lte IE 9]>
      <link rel="stylesheet" href="../assets/css/ace-ie.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/Content/template/assets/css/ace.onpage-help.css" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="../assets/js/html5shiv.js"></script>
    <script src="../assets/js/respond.min.js"></script>
    <![endif]-->

    <link href="~/Content/cambios.css" rel="stylesheet" />
    <link href="~/Content/template/assets/css/jquery-ui.min.css" rel="stylesheet" />
</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <!-- <i class="ace-icon fa fa-leaf green"></i>
                                <span class="red">Ace</span>
                                <span class="white" id="id-text2">Application</span>-->
                                <img id="logo" src="~/Content/Landing/images/logo.png" class="Logo_ini" />

                            </h1>
                            <h4 class="mod3" id="id-company-text">Prodactive</h4>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">

                            <div id="forgot-box" class=" visible forgot-box widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header red lighter bigger">
                                            <i class="ace-icon fa fa-key"></i>
                                            Recuperación de Contraseña
                                        </h4>
                                        <div class="space-6"></div>

                                        <!--
                                            pasos para recuperacion de constraseña.
                                            1. responder la pregunta secreta
                                            2. si es correctar ingresar la nueva contraseña y su confirmacion.
                                            3. enviar a la pagina de logueo.

                                            -->
                                        <form id="formReset" action="/Account/ResetAccount" method="POST" autocomplete="off">
                                            <input name="id" type="text" value="@ViewBag.Mail" style="display:none;" />

                                            <input name="usuario" type="text" placeholder="Usuario" />
                                            <input id="pass1" name="password" type="password" placeholder="contraseña"/>
                                            <input id="pass2" type="password" placeholder="reingrese la contraseña" />
                                            
                                            <input name="email" type="email" placeholder="email"/>

                                            @Html.DropDownList("pregunta", (SelectList) ViewBag.Questions, "seleccione la pregunta secreta", new { name = "pregunta" })
                                            <input name="answer" type="password" required="required" placeholder="Digita tu respuesta" />

                                            <input type="submit" value="Enviar Respuesta" />

                                        </form>
                                        @{
                                            if (ViewBag.Error != null && ViewBag.Error == true)
                                            {
                                                @:<label class="text-warning"><h5>@ViewBag.Mensaje</h5></label>
                                            }
                                        }

                                    </div>


                                </div><!-- /.widget-body -->
                            </div><!-- /.forgot-box -->

                        </div><!-- /.signup-box -->
                    </div><!-- /.position-relative -->


                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script>
        $(function() {
            $('#formReset').on('submit', function () {
                if ($('#pass1').val() === $('#pass2').val()) {
                    return true;
                }
                return false;
            });
        });
    </script>
</body>
</html>
