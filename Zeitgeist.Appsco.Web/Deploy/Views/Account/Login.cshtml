@model Zeitgeist.Appsco.Web.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}

<section id="loginForm">
    <div class="col-lg-5 col-centered">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend><h3>@ViewBag.Title</h3></legend>
                <ol id="login_l">
                    <li>
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-sm-3 control-label no-padding-right", @for = "UserName" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "col-xs-10 col-sm-7", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label no-padding-right", @for = "Password" })
                            <div class="col-sm-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "col-xs-10 col-sm-7" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            @Html.LabelFor(m => m.RememberMe, new { @class = "col-sm-3 control-label no-padding-right checkbox", @for = "RememberMe" })
                            <div class="col-sm-9">
                                @Html.CheckBoxFor(m => m.RememberMe)
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <div class="col-sm-3 control-label no-padding-right">
                                <input type="submit" value="Iniciar sesión" class="btn btn-info" />
                            </div>

                        </div>
                    </li>
                </ol>

            </fieldset>
            <p>
                @Html.ActionLink("Regístrese", "Register") si no tiene ninguna cuenta.
            </p>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Account/login.js"></script>
}

